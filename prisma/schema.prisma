// fix database relations (on save it will create faulty relations)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  directUrl = env("DIRECT_URL")
  url       = env("DATABASE_URL")
  provider  = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  hearts   Int
}

model Language {
  id     Int      @id @default(autoincrement())
  code   String   @unique
  name   String
  Lesson Lesson[]
}

model Lesson {
  id           Int         @id @default(autoincrement())
  name         String
  language     Language    @relation(fields: [languageCode], references: [code])
  languageCode String
  challenges   Challenge[]
}

model Challenge {
  id         Int       @id @default(autoincrement())
  name       String
  order      Int
  lesson     Lesson    @relation(fields: [lessonId], references: [id])
  sentence   Sentence? @relation(fields: [sentenceId], references: [id])
  select     Select?   @relation(fields: [selectId], references: [id])
  lessonId   Int
  sentenceId Int?
  selectId   Int?
}

model Sentence {
  id                  Int         @id @default(autoincrement())
  sentenceText        Word[]
  wordId              Int
  correctSentenceText Word[]
  translate           String
  challenge           Challenge[]
}

model Select {
  id            Int         @id @default(autoincrement())
  wordsSelect   Word[]
  correctSelect Word        @relation(fields: [wordId], references: [id])
  challenge     Challenge[]
  wordId        Int
}

model Word {
  id         Int       @id @default(autoincrement())
  text       String    @unique
  meaning    String?
  select     Select[]
  sentence   Sentence? @relation(fields: [sentenceId], references: [id])
  sentenceId Int?
}
