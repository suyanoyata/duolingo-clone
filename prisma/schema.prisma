generator client {
  provider = "prisma-client-js"
}

datasource db {
  directUrl = env("DIRECT_URL")
  url       = env("DATABASE_URL")
  provider  = "postgresql"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String   @unique
  password   String
  hearts     Int      @default(5)
  experience Int      @default(0)
  score      Int      @default(0)
  joinedAt   DateTime @default(now())
}

model Language {
  id   Int    @id @default(autoincrement())
  code String @unique
  name String
}
